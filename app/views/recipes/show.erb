<h3><a href="/recipes/<%= @recipe.id %>/edit">Edit your recipe</a></h3>
<h3><a href="/users/<%= @user_id %>"> Go to your userpage </a></h3>
<ul>
<% @selected_recipe.each do |r| %>
    <li>
        <h1>
          	<u><%= r.name.upcase %></u>
          <br>
           	Ingredients: <%= r.ingredients %>
           <br>
           	Procedures: <%= r.procedures %>
        </h1>
    </li>
<% end %>
</ul>
<form method="POST" action="/recipes/<%= @recipe.id %>">
    <input type="hidden" name="_method" value="DELETE" />
    <input type="submit" value="DELETE">
</form>
